<% if (typeof data != "undefined"){ %>

<h1>Ontwerp je T-Shirt</h1>
<form id="update-form" action="/form/<% if (typeof data != "undefined"){ %><%= data._id %><%}%>" method="POST" enctype="multipart/form-data">
    <input type="hidden" name="hidden_id" value="<% if (typeof data != "undefined"){ %><%= data._id %><%}%>">
    <section>
        <fieldset>
            <legend>Wat voor shirt wil je?</legend>

            <% console.log('data', data) %>
            <% data.design.gender.forEach(gender => { %>

            <label for="<%= gender %>">
                <input type="radio" id="<%= gender %>" name="type" value="<%= gender %>"
                    <% if (data.type == gender) { %> checked <% } %>>
                <span class="<%= gender %>"></span>
                <%= gender %> shirt
            </label>

            <% }) %>
        </fieldset>

        <fieldset>
            <legend>Wat is je maat?</legend>
            <% data.design.sizes.forEach(size => { %>

            <label for="<%= size %>">
                <input type="radio" id="<%= size %>" name="size" value="<%= size %>" <% if (data.size == size) { %>
                    checked <% } %>>
                <span class="<%= size %>"></span>
                <%= size %>
            </label>

            <% }) %>
        </fieldset>
        <fieldset>
            <legend>Wat voor kleur shirt wil je?</legend>
            <% data.design.shirtColors.forEach(colors => { %>

            <label for="<%= colors.name %>">
                <input type="radio" id="<%= colors.name %>" name="color" value="<%= colors.name %>">
                <% if (data.color == colors.name) { %> checked <% } %>
                <span class="<%= colors.name %>"></span>
                <%= colors.nerdy %> shirt
            </label>

            <% }) %>
        </fieldset>
        <fieldset>
            <legend>Wat voor kleur tekst wil je?</legend>
            <% console.log('data', data.color) %>

            <% data.design.textColors.forEach(colors => { %>
            <label for="<%= colors.name %>">
                <input type="radio" id="<%= colors.name %>" name="textColor" value="<%= colors.name %>"
                    <% if (data.textColor == colors.name) { %> checked <% } %>>
                <span class="<%= colors.name %>"></span>
                <%= colors.nerdy %> shirt
            </label>

            <% }) %>
        </fieldset>
    </section>
    <section id="shirt-container">
        <%- include ("shirt.ejs") %>
        <fieldset>
            <legend>Wat voor programmeertaal spreek je?</legend>

            <label for="first-language">
                Eerste Taal
                <input type="text" id="first-language" name="firstLanguage" value="<%= data.firstLanguage %>">
            </label>

            <label for="second-language">
                Tweede Taal
                <input type="text" id="second-language" name="secondLanguage" value="<%= data.secondLanguage %>">
            </label>


            <label for="third-language">
                Derde Taal
                <input type="text" id="third-language" name="thirdLanguage" value="<%= data.thirdLanguage %>">
            </label>

            <label for="fourth-language">
                Vierde Taal
                <input type="text" id="fourth-language" name="fourthLanguage" value="<%= data.fourthLanguage %>">
            </label>
        </fieldset>
        <button class="save">Opslaan</button>
    </section>
</form>
<% } %>